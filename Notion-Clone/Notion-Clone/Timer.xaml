<Window x:Class="Notion_Clone.Timer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title ="Timer" Height="150" Width="250">
    <Grid>
        <Button Width="60" Margin="5" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="StartTimeButton">Start</Button>
        <Button Width="60" Margin="5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="StopTimeButton">Stop</Button>
        <Label Name="lblTime"  FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
    </Grid>
</Window>